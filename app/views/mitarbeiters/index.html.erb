<div class="col-sm-10">
  <h2> <i class="glyphicon glyphicon-user"></i>  Zuteilungswünsche</h2>
  <br>

  <table id="Mitarbeiter" class="table table-bordered">
    <thead>
    <tr>
      <th>Tätigkeit</th>
      <th>Startdatum</th>
      <th>Dauer in Stunden</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @mitarbeiters.each do |mitarbeiter| %>
        <tr>
          <td><%= mitarbeiter.text %></td>
          <td><%= mitarbeiter.start_date %></td>
          <td><%= mitarbeiter.duration %></td>
          <td><%= mitarbeiter.user %></td>

          </td>

          <!-- Buttons mit Glyphicons -->
          <td><%= link_to mitarbeiter, class: 'btn btn-primary btn-xs' do%>
                <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
            <%= link_to edit_mitarbeiter_path(mitarbeiter), class: 'btn btn-warning btn-xs' do%>
                <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            <%= link_to mitarbeiter,  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do%>
                <i class="glyphicon glyphicon-remove"></i>
            <% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to new_mitarbeiter_path, class: 'btn btn-success' do %>
      <i class="glyphicon glyphicon-plus"></i>
  <% end %>

</div>